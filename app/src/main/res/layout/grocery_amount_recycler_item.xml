<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp">

        <TextView
            android:layout_width="160dp"
            android:id="@+id/grocery_name"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:text="Chicken breast"/>

        <TextView
            android:id="@+id/grocery_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="300 gr"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grocery_kcal"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/remove_button"
            android:layout_marginRight="3dp"
            android:text="300 kcal"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="#ffffff"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_cancel_icon"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>