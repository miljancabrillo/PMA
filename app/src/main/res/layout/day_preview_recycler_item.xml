<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="3dp"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp">


        <TextView
            android:id="@+id/day_preview_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="12.12.2001"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="35dp"
            android:layout_height="41dp"
            android:layout_below="@id/day_preview_day"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="10dp"
            app:srcCompat="@drawable/ic_calories_eaten" />


        <TextView
            android:id="@+id/day_preview_kcal_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day_preview_day"
            android:layout_toEndOf="@id/imageView3"
            android:paddingTop="10dp"
            android:text="2900"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="57dp"
            android:layout_height="45dp"
            android:layout_below="@id/day_preview_day"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-4dp"
            app:srcCompat="@drawable/ic_burn_calories" />

        <TextView
            android:id="@+id/day_preview_kcal_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day_preview_day"
            android:layout_toStartOf="@id/imageView4"
            android:paddingTop="10dp"
            android:text="2220"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/day_preview_kcal_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day_preview_day"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:text="+2220"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#00ff00" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>